pipeline{
    agent any

    stages{
    stage('init'){
            steps{
            script{
                gv = load 'script.groovy'
                }
                }
        }
    stage('Build'){
        steps {
            sh './gradlew clean build'
            }
        }

    stage('Test'){
        steps {
            sh './gradlew test'
            }
        }
    stage('Deploy'){
            steps {
            script{
                gv.buildApp()
                }
                }
            }
    }
}