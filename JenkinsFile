pipeline{
    agent any

    stages{
    stage('Build'){
        steps {
            git 'https://github.com/Chandrika-Priya/Course-Management-Api.git'
            sh './gradlew clean build'
            }
        }

    stage('Test'){
        steps {
            sh './gradlew test'
        }

        post {
                always {
                    junit 'build/test-results/test'
                    }
                }
            }
    }
}